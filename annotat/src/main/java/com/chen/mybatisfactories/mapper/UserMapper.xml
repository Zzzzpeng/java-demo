<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chen.mybatisfactories.mapper.UserMapper">

    <select id="getOneForUpdate" resultType="com.chen.mybatisfactories.Po.Post">
        select * from group_post where id = 5 for update
    </select>
    <select id="getOne" resultType="com.chen.mybatisfactories.Po.Post">
        select * from group_post where id = 5
    </select>
    <update id="update">
        update group_post set `status` = status - 1  where id = 5
    </update>
    <insert id="addOne">
        insert into group_post(id,group_id,content_id,status)
        values(#{0},0,5,0);
    </insert>

    <delete id="delOne">
        delete from group_post where id = #{0}
    </delete>

    <update id="updateJianxi">
        update group_post set `status` = 0  where id > 2 and id &lt; 6

    </update>

    <update id="decrece">
        update group_post set `status` = `status` - #{count}   where id = 5
    </update>
<!--    /*> 2 and id &lt; 6*/-->

</mapper>